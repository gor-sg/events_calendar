<%= form_with(url: root_path, method: :get, local: true) do |form| %>
  <div class="form-row">
    <div class="col-md-3 mb-3">
      <%= form.label :source %>
      <%= form.select :source, options_for_select(@sources, selected: @source), { include_blank: '- all -' }, class: 'form-control' %>
    </div>
    <div class="col-md-2 mb-3">
      <%= form.label :starts_on, 'From' %>
      <%= form.text_field :starts_on, type: 'date', class: 'form-control', value: @starts_on, min: Date.today %>
    </div>
    <div class="col-md-2 mb-3">
      <%= form.label :ends_on, 'To' %>
      <%= form.text_field :ends_on, type: 'date', class: 'form-control', value: @ends_on, min: Date.today %>
    </div>
    <div class="col-md-5 mb-3">
      <%= form.label :query %>
      <%= form.text_field :query, type: 'text', class: 'form-control', value: params[:query] %>
    </div>
  </div>
  <div class="form-row">
    <div class="col-md-12 mb-3">
      <div class='align-bottom'><%= form.submit 'Search', class: 'btn btn-primary' %></div>
    </div>
  </div>
<% end %>
